{
  "name": "Holodeck",
  "version": "0.1.0",
  "description": "A set of styled-components with easily editable themes. ",
  "main": "build/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "babel lib -d build",
    "build:watch": "babel lib -w -d build",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint lib/**; exit 0",
    "lint:js:watch": "esw -w lib/**",
    "prepare": "npm run build",
    "review": "run-s lint test:clean test test:coverage:report",
    "lint:style": "stylelint -- \"./lib/**/*.js\"",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest lib/**; exit 0",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest lib/** --watch",
    "test:watchAll": "jest lib/** --watchAll",
    "test:coverage:report": "open ./coverage/lcov-report/index.html"
  },
  "author": "Jan Dvorak <storyteller@freedombase.net> (https://github.com/storytellercz)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Freedombase/holodeck"
  },
  "bugs": {
    "url": "https://github.com/Freedombase/holodeck/issues"
  },
  "dependencies": {
    "polished": "^1.9.2",
    "react-fontawesome": "^1.6.1",
    "styled-components": "^3.2.1",
    "styled-components-modifiers": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "eslint-watch": "^3.1.3",
    "fontfaceobserver": "^2.0.13",
    "jest": "^22.4.2",
    "jest-styled-components": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.2.0",
    "react-styleguidist": "^6.2.7",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.0",
    "webpack": "^3.11.0"
  },
  "resolutions": {
    "uglify-es": "3.3.7"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**",
      "!lib/**/*.snap",
      "!lib/blocks/index.js",
      "!lib/elements/index.js",
      "!lib/modifiers/**",
      "!lib/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFiles": [
      "raf/polyfill",
      "./__tests__/config"
    ]
  }
}
